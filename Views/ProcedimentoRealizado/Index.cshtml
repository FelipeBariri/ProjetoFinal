@model IEnumerable<ProjetoFinalFelipe.Models.ProcedimentoRealizado>

@{
    ViewData["Title"] = "Index";
}

<h1>Procedimento Realizado</h1>

<p>
    <a asp-action="Create">Criar um novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procedimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colaborador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalRealizacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataRealizacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.ClienteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Procedimento.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colaborador.ColaboradorNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalRealizacao.LocalNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataRealizacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProcedimentoRealizadoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ProcedimentoRealizadoId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ProcedimentoRealizadoId">Deletar</a> |
                <a asp-action="Imprimir" asp-route-id="@item.ProcedimentoRealizadoId">Imprimir</a>
            </td>
        </tr>
}
    </tbody>
</table>
